<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <application
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Notification"
        tools:targetApi="31">
        <activity
            android:name="com.mi.mitiramisunotify.presentation.main.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.mi.mitiramisunotify.presentation.notification.NotificationWithJetpackComposeActivity"
            android:exported="true" />
        <activity
            android:name="com.mi.mitiramisunotify.presentation.notification.NotificationWithXMLActivity"
            android:exported="true" />
    </application>

</manifest>
